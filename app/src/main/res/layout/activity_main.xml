<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <RelativeLayout
      android:id="@+id/activity_main"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/z1" />
  </RelativeLayout>

  <TableLayout
    android:id="@+id/tableLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="202dp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <EditText
        android:id="@+id/City"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

      <TextView
          android:id="@+id/text"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Ваша погода"
          android:textColor="#3F51B5" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <Button
          android:id="@+id/button"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="#A4045704"
          android:text="Узнать"
          android:textColor="#37CAB9"
          android:textColorLink="#E72973" />
    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    </TableRow>

    <TableRow
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <CheckBox
          android:id="@+id/Fahre"
          android:layout_width="94dp"
          android:layout_height="wrap_content"
          android:text="Фаренгейт"
          android:textColor="#2196F3"
          android:textColorHint="#7E5959" />

      <CheckBox
          android:id="@+id/Cels"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Цельсий"
          android:textColor="#2196F3" />

      <CheckBox
          android:id="@+id/Kelvin"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Кельвин"
          android:textColor="#2196F3" />

    </TableRow>
  </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
